pipeline {
    agent any

    stages {
        stage('Install Maven') {
            steps {
                script {
                    sh 'apt-get update'
                    sh 'apt-get install -y maven'
                }
            }
        }

        stage('Set Maven Path') {
            steps {
                script {
                    sh 'export PATH=$PATH:/path/to/maven/bin'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh 'mvn test'
                }
            }
        }
    }
}
