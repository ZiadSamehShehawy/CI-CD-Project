pipeline {
    agent any

    environment {
        M2_HOME = '/usr/share/maven'
        PATH = "$M2_HOME/bin:$PATH"
    }

    stages {
        stage('Build') {
            steps {
                script {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh 'mvn test'
                }
            }
        }
    }
}
